{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"extends": "airbnb",
	"rules": {
    "semi":	"off",
    "react/jsx-filename-extension": "off",
    "react/prefer-stateless-function": "off",
    "jsx-a11y/anchor-is-valid": [0],
    "no-template-curly-in-string": [0],
    "class-methods-use-this": [0],
    "no-console": [0],
    "react/require-default-props": [0]
  }
}
